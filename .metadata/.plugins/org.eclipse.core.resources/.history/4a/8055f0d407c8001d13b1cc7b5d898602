package c_users2;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;
import java.util.Scanner;


public class UsersTCPClient {
	
	private static final Scanner SCANNER = new Scanner(System.in);
	public static final String SERVER = "localhost"; //localhost o mi propia ip
	public static final int PORT = 3400; //3400
	private PrintWriter toNetwork;
	private BufferedReader fromNetwork;
	private Socket clientSideSocket;
	
	public UsersTCPClient() {
		System.out.println("Echo TCP client is running ...");
	}
	
	public void init() throws Exception {
		clientSideSocket = new Socket(SERVER, PORT);
		createStreams(clientSideSocket);
		int opcion = menu();
		protocol(clientSideSocket, opcion);
		clientSideSocket.close();
	}
	
	private int menu() {
		System.out.print("Ingrese el numero de la operacion a realizar: \n "
				+ "1. LOGIN \n "
				+ "2. INFORME \n "
				+ "3. INFORME DETALLADO \n");
		int opcion = SCANNER.nextInt();
		return opcion;
	}

	public void protocol(Socket socket) throws Exception {
		
		
		if (opcion == 1) {
				System.out.print("Ingrese su nombre: ");
				String fromUser = SCANNER.nextLine();
				toNetwork.println("LOGIN "+fromUser);
				String fromServer = fromNetwork.readLine();
				System.out.println("[Client] From server: " + fromServer);
			
		}if (opcion == 2) {
				toNetwork.println("INFORME");
				String fromServer2 = fromNetwork.readLine();
				System.out.println("[Client] From server: " + fromServer2);
				
		}if (opcion == 3) {
				toNetwork.println("INFORME_DETALLADO");
				String fromServer3 = fromNetwork.readLine();
				System.out.println("[Client] From server: " + fromServer3);
		}
	}
	
	private void createStreams(Socket socket) throws Exception {
		toNetwork = new PrintWriter(socket.getOutputStream(), true);
		fromNetwork = new BufferedReader(new InputStreamReader(socket.getInputStream()));
	}
	
	public static void main(String args[]) throws Exception {
		UsersTCPClient ec = new UsersTCPClient();
		ec.init();
	}
	
}
